<Window x:Class="TollStations.View.ChiefView.ChiefInitialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TollStations.View.ChiefView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Chief window" Height="350" Width="400" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Center" Height="100" Margin="0,65,0,0" VerticalAlignment="Top" Width="100" Source="/Images/image.png" />
        <Button Content="Device validation" Command="{Binding DeviceValidationCommand}" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" FontSize="20" Width="200" Height="30" />
        <Button Content="Earnings report" Command="{Binding EarningsReportCommand}" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" FontSize="20" Width="200" Height="30" />
    </Grid>
</Window>
